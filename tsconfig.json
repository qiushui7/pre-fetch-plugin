{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "types": ["node", "webpack"],
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
